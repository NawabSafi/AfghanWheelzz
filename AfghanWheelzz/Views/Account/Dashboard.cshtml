@model List<AfghanWheelzz.Models.UserModels.ApplicationUser>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div id="chart_div_make" style="height: 400px;"></div> <!-- Chart for Cars by Make -->
        </div>
        <div class="col-md-6">
            <div id="chart_div_location" style="height: 400px;"></div> <!-- Chart for Cars by Location -->
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div id="chart_div_registration" style="height: 400px;"></div> <!-- Chart for Cars by Registration -->
        </div>
        <div class="col-md-6">
            <div id="chart_div_category" style="height: 400px;"></div> <!-- Chart for Cars by Category -->
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <h2>Users</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Car Count</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FirstName @user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.CarCount</td>
                            <td>
                                <!-- Check the data-target attribute and ensure it matches the modal ID -->
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal_@user.Id">Delete</button>
                                <!-- Modal -->
                                <div class="modal fade" id="deleteModal_@user.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to delete this user?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                <button type="button" class="btn btn-danger" onclick="deleteUser('@user.Id')">Delete</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <form id="deleteForm_@user.Id" method="post" action="@Url.Action("DeleteUser", "Account")" style="display:none;">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawCharts);

        function drawCharts() {
            // Chart for Cars by Make
            var dataByMake = google.visualization.arrayToDataTable(@Html.Raw(Json.Serialize(ViewBag.ChartDataByMake)));
            var optionsByMake = {
                title: 'Cars by Make',
                pieHole: 0.4,
            };
            var chartByMake = new google.visualization.PieChart(document.getElementById('chart_div_make'));
            chartByMake.draw(dataByMake, optionsByMake);

            // Chart for Cars by Location
            var dataByLocation = google.visualization.arrayToDataTable(@Html.Raw(Json.Serialize(ViewBag.ChartDataByLocation)));
            var optionsByLocation = {
                title: 'Cars by Location',
                pieHole: 0.4,
            };
            var chartByLocation = new google.visualization.PieChart(document.getElementById('chart_div_location'));
            chartByLocation.draw(dataByLocation, optionsByLocation);

            // Chart for Cars by Registration
            var dataByRegistration = google.visualization.arrayToDataTable(@Html.Raw(Json.Serialize(ViewBag.ChartDataByRegistration)));
            var optionsByRegistration = {
                title: 'Cars by Registration',
                pieHole: 0.4,
            };
            var chartByRegistration = new google.visualization.PieChart(document.getElementById('chart_div_registration'));
            chartByRegistration.draw(dataByRegistration, optionsByRegistration);

            // Chart for Cars by Category
            var dataByCategory = google.visualization.arrayToDataTable(@Html.Raw(Json.Serialize(ViewBag.ChartDataByCategory)));
            var optionsByCategory = {
                title: 'Cars by Category',
                pieHole: 0.4,
            };
            var chartByCategory = new google.visualization.PieChart(document.getElementById('chart_div_category'));
            chartByCategory.draw(dataByCategory, optionsByCategory);
        }

        function deleteUser(userId) {
            if (confirm('Are you sure you want to delete this user?')) {
                fetch('@Url.Action("DeleteUser", "Account")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ userId: userId })
                })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        location.reload(); // Reload the page to reflect the changes
                    })
                    .catch(error => {
                        console.error('There was a problem with the fetch operation:', error);
                    });
            }
        }

    </script>
}
