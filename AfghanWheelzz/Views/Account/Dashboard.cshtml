@model List<AfghanWheelzz.Models.UserModels.ApplicationUser>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div id="chart_div_make" style="height: 400px;"></div> <!-- Chart for Cars by Make -->
        </div>
        <div class="col-md-6">
            <div id="chart_div_location" style="height: 400px;"></div> <!-- Chart for Cars by Location -->
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div id="chart_div_registration" style="height: 400px;"></div> <!-- Chart for Cars by Registration -->
        </div>
        <div class="col-md-6">
            <div id="chart_div_category" style="height: 400px;"></div> <!-- Chart for Cars by Category -->
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card mb-2 shadow-lg p-3">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon icon-lg icon-shape bg-gradient-primary shadow-primary shadow border-radius-xl mr-3">
                            <i class="material-icons opacity-10">person</i>
                        </div>
                        <div class="text-end">
                            <p class="text-sm mb-0 text-uppercase">Today's Users</p>
                            <h4 class="mb-0">@ViewBag.UsersVisitedTodayCount</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts {
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawCharts);

        function drawCharts() {
            // Chart for Cars by Make
            var dataByMake = google.visualization.arrayToDataTable(@Html.Raw(Json.Serialize(ViewBag.ChartDataByMake)));
            var optionsByMake = {
                title: 'Cars by Make',
                pieHole: 0.4,
            };
            var chartByMake = new google.visualization.PieChart(document.getElementById('chart_div_make'));
            chartByMake.draw(dataByMake, optionsByMake);

            // Chart for Cars by Location
            var dataByLocation = google.visualization.arrayToDataTable(@Html.Raw(Json.Serialize(ViewBag.ChartDataByLocation)));
            var optionsByLocation = {
                title: 'Cars by Location',
                pieHole: 0.4,
            };
            var chartByLocation = new google.visualization.PieChart(document.getElementById('chart_div_location'));
            chartByLocation.draw(dataByLocation, optionsByLocation);

            // Chart for Cars by Registration
            var dataByRegistration = google.visualization.arrayToDataTable(@Html.Raw(Json.Serialize(ViewBag.ChartDataByRegistration)));
            var optionsByRegistration = {
                title: 'Cars by Registration',
                pieHole: 0.4,
            };
            var chartByRegistration = new google.visualization.PieChart(document.getElementById('chart_div_registration'));
            chartByRegistration.draw(dataByRegistration, optionsByRegistration);

            // Chart for Cars by Category
            var dataByCategory = google.visualization.arrayToDataTable(@Html.Raw(Json.Serialize(ViewBag.ChartDataByCategory)));
            var optionsByCategory = {
                title: 'Cars by Category',
                pieHole: 0.4,
            };
            var chartByCategory = new google.visualization.PieChart(document.getElementById('chart_div_category'));
            chartByCategory.draw(dataByCategory, optionsByCategory);
        }
    </script>
}
