@{
    ViewData["Title"] = "Home";
     Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        body {
            background-color: #f8f9fa;
        }

        h1 {
            text-align: center;
            color: #007bff;
            margin-top: 20px;
            margin-bottom: 30px;
        }

        .input-group {
            margin-bottom: 20px;
        }

        .card {
            border: none;
            transition: transform 0.3s;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 0 30px rgba(0, 0, 0, 0.4);
            }

        .card-img-top {
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            object-fit: cover;
            height: 200px;
        }

        .card-body {
            padding: 20px;
            background-color: #fff;
        }

        .card-title {
            font-size: 24px;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }

        .card-text {
            color: #666;
            margin-bottom: 20px;
        }

        .badge {
            background-color: #28a745;
            color: #fff;
            font-size: 14px;
            font-weight: bold;
            padding: 5px 10px;
            position: absolute;
            top: 15px;
            right: 15px;
            border-radius: 5px;
        }

        .detail-btn {
            margin-top: 20px;
        }

        .featured-item {
            border: 2px solid #007bff;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .featured-icon {
            color: #007bff;
        }

        .section-title-special {
            color: #007bff;
            margin-left: 5px;
        }

        .img-container {
            position: relative;
        }

            .img-container img {
                border-radius: 10px;
                width: 100%;
                height: auto;
            }

        .featured-link {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: #fff;
            font-size: 24px;
            text-decoration: none;
        }

        .gallery-item {
            margin-bottom: 20px;
        }

        .gallery-img {
            border-radius: 10px;
            width: 100%;
            height: auto;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0, 0, 0);
            background-color: rgba(0, 0, 0, 0.4);
            padding-top: 60px;
        }

        .modal-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
                cursor: pointer;
            }

    </style>
</head>
<body>
    <div class="container">
        <h1>Explore Our Car Listings</h1>
        <div class="input-group mb-3">
            <input type="text" id="searchInput" class="form-control" placeholder="Search by make, model, or price">
            <div class="input-group-append">
                <button class="btn btn-primary" type="button" onclick="searchCars()">Search</button>
            </div>
        </div>

        <div class="row">
            @foreach (var car in Model)
            {
                var imagePath = car.ImagePath.Replace("\\", "/");
                <div class="col-md-4 mb-4">
                    <div class="card shadow">
                        <div class="position-relative overflow-hidden">
                            <img src="~/@imagePath" class="card-img" alt="Car Image">
                            <span class="badge">New Arrival</span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@($"{car.Make} {car.Model}")</h5>
                            <p class="card-text">
                                <strong>Price:</strong>  @car.Price <strong>(AFN)</strong><br />
                                <strong>Mileage:</strong> @car.Mileage <strong>(MPG)</strong> <br />
                                <strong>Location:</strong> @ViewBag.Location[car.Id].City <i class="fas fa-map-marker-alt"></i> <br /> <!-- Location icon -->
                            </p>
                            <div class="text-center">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@car.Id" class="btn btn-outline-primary detail-btn">Detail</a>
                               
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <section class="py-5">
        <div class="container">
            <div class="row align-items-center">
                <!-- Featured Info -->
                <div class="col-12 col-lg-6 mb-4 mb-lg-0">
                    <div class="row">
                        <!-- Single Item -->
                        <div class="col-6 mb-4">
                            <div class="featured-item text-center">
                                <div class="featured-icon mb-3">
                                    <i class="fas fa-car fa-3x"></i>
                                </div>
                                <h5 class="font-weight-bold text-uppercase">Chevrolet</h5>
                                <p class="text-muted">New Model</p>
                            </div>
                        </div>
                        <!-- End of Single Item -->
                        <!-- Single Item -->
                        <div class="col-6 mb-4">
                            <div class="featured-item text-center">
                                <div class="featured-icon mb-3">
                                    <i class="fas fa-car fa-3x"></i>
                                </div>
                                <h5 class="font-weight-bold text-uppercase">BMW</h5>
                                <p class="text-muted">New Model</p>
                            </div>
                        </div>
                        <!-- End of Single Item -->
                        <!-- Single Item -->
                        <div class="col-6 mb-4">
                            <div class="featured-item text-center">
                                <div class="featured-icon mb-3">
                                    <i class="fas fa-car fa-3x"></i>
                                </div>
                                <h5 class="font-weight-bold text-uppercase">Mercedes</h5>
                                <p class="text-muted">New Model</p>
                            </div>
                        </div>
                        <!-- End of Single Item -->
                        <!-- Single Item -->
                        <div class="col-6 mb-4">
                            <div class="featured-item text-center">
                                <div class="featured-icon mb-3">
                                    <i class="fas fa-car fa-3x"></i>
                                </div>
                                <h5 class="font-weight-bold text-uppercase">Audi</h5>
                                <p class="text-muted">New Model</p>
                            </div>
                        </div>
                        <!-- End of Single Item -->
                    </div>
                </div>
                <!-- End of Featured Info -->
                <!-- Featured Image -->
                <div class="col-12 col-lg-6">
                    <div class="img-container">
                        <img src="~/Images/cars/pexels-may-dayua-1545743 (1).jpg" class="img-fluid featured-photo" alt="Featured Image">
                        <a href="#" class="featured-link">
                            <i class="fas fa-search fa-2x"></i>
                        </a>
                    </div>
                </div>
                <!-- End of Featured Image -->
            </div>
        </div>
    </section>



    <section class="gallery py-5" id="gallery">
        <div class="container">
            <!--section title-->
            <div class="row mb-5">
                <div class="col d-flex flex-wrap justify-content-center text-uppercase">
                    <h1 class="font-weight-bold mx-1 align-self-center">our</h1>
                    <h1 class="section-title-special mx-1">gallery</h1>
                </div>
            </div>
            <!--end of section title-->
            <div class="row">
                <!--left side column-->
                <div class="col-sm-6">
                    <div class="gallery-item">
                        <img src="~/Images/cars/pexels-markus-spiske-1729993.jpg" class="img-fluid gallery-img">
                    </div>
                </div>
                <!--right side column-->
                <div class="col-sm-6 d-flex flex-column justify-content-between">
                    <div class="row ">
                        <!--single item-->
                        <div class="col-sm-6">
                            <div class="gallery-item">
                                <img src="~/Images/cars/pexels-luis-quintero-3689531.jpg" class="img-fluid gallery-img">
                            </div>
                        </div>
                        <!--end of single item-->
                        <!--single item-->
                        <div class="col-sm-6">
                            <div class="gallery-item">
                                <img src="~/Images/cars/pexels-neil-kelly-712618.jpg" class="img-fluid gallery-img">
                            </div>
                        </div>
                        <!--end of single item-->

                    </div>

                    <div class="row ">
                        <!--single item-->
                        <div class="col-sm-6">
                            <div class="gallery-item">
                                <img src="~/Images/cars/pexels-natasha-filippovskaya-4665688.jpg" class="img-fluid gallery-img">
                            </div>
                        </div>
                        <!--end of single item-->
                        <!--single item-->
                        <div class="col-sm-6">
                            <div class="gallery-item">
                                <img src="~/Images/cars/pexels-neil-kelly-712618.jpg" class="img-fluid gallery-img">
                            </div>
                        </div>
                        <!--end of single item-->

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Modal -->
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <div id="userDetails">
                <!-- User details will be displayed here -->
            </div>
        </div>
    </div>

  
    <script src="~/js/searchCars.js"></script>
 
</body>
</html>
