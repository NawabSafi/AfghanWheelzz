@model AfghanWheelzz.ViewModels.CarViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4 text-white">Post Your Car</h1>
    <hr />

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form id="createCarForm" asp-action="Create" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Make" class="form-label text-white">Make</label>
                    <input asp-for="Make" class="form-control" required />
                    <span asp-validation-for="Make" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Model" class="form-label text-white">Model</label>
                    <input asp-for="Model" class="form-control" required />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Year" class="form-label text-white">Year</label>
                        <input asp-for="Year" class="form-control" required />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Price" class="form-label text-white">Price ($)</label>
                        <input asp-for="Price" class="form-control" required />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Mileage" class="form-label text-white">Mileage</label>
                    <input asp-for="Mileage" class="form-control" required />
                    <span asp-validation-for="Mileage" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label text-white">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="CategoryId" class="form-label text-white">Category</label>
                        <select asp-for="CategoryId" class="form-select" required>
                            <option value="">Select Category</option>
                            <option value="1">Electric</option>
                            <option value="2">Hybrid</option>
                            <option value="3">Gasoline</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LocationId" class="form-label text-white">Location</label>
                        <select asp-for="LocationId" class="form-select" required>
                            <option value="">Select Location</option>
                            <option value="1">Jalalabad</option>
                            <option value="2">Kabul</option>
                            <option value="3">Kunar</option>
                        </select>
                        <span asp-validation-for="LocationId" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="RegistrationId" class="form-label text-white">Registration</label>
                    <select asp-for="RegistrationId" class="form-select" required>
                        <option value="">Select Registration</option>
                        <option value="1">Register</option>
                        <option value="2">Un-Register</option>
                    </select>
                    <span asp-validation-for="RegistrationId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="File" class="form-label text-white">Upload Car Image</label>
                    <input type="file" name="File" class="form-control" required />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit Detail</button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Car Listings</a>
    </div>
</div>
