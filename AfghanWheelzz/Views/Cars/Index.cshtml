@model IEnumerable<AfghanWheelzz.ViewModels.CarViewModel>
@{
    ViewData["Title"] = "Car Listings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .card-img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.05);
        }
</style>

<div class="container mt-5">
    <h1 class="text-center mb-4">Explore Our Car Listings</h1>
    <div class="row">
        @foreach (var car in Model)
        {
            var imagePath = car.ImagePath;
            <div class="col-md-3 mb-3">
                <div class="card h-100 border-primary">
                    <div class="position-relative overflow-hidden">
                        <img src="~/@imagePath" class="card-img" alt="Car Image">
                        <span class="badge badge-danger position-absolute top-0 end-0 m-2">New Arrival</span>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-primary">@($"{car.Make} {car.Model}")</h5>
                        <p class="card-text">
                            <strong>Year:</strong> @car.Year <br />
                            <strong>Price:</strong> $@car.Price <br />
                            <strong>Mileage:</strong> @($"{car.Mileage} miles") <br />

                        </p>
                        <p class="card-text">@car.Description</p>
                        <div class="text-center">
                            <!-- Delete Button -->
                            <a href="@Url.Action("Edit", "Cars", new { id = car.Id })" class="btn btn-outline-primary">Edit</a>
                            <button class="btn btn-outline-danger delete-btn" data-id="@car.Id">Delete</button>

                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
    <div class="text-center mt-4">
        <a asp-action="Create" class="btn btn-primary btn-lg">Add New Car</a>
    </div>
</div>
<!-- Modal HTML -->
<div id="myModal" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header flex-column">
                <div class="icon-box">
                    <i class="material-icons">&#xE5CD;</i>
                </div>
                <h4 class="modal-title w-100">Are you sure?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <p>Do you really want to delete these records? This process cannot be undone.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger">Delete</button>
            </div>

        </div>
    </div>
</div>
<div id="editModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Car</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Form for editing car details -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveChangesBtn">Save changes</button>
            </div>
        </div>
    </div>
    <script src="~/js/DeleteModal.js"></script>
</div>