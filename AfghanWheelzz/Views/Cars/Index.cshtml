@model X.PagedList.IPagedList<Car>
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
  
    <link rel="stylesheet" href="~/css/style.css" />
 
</head>
<body>

    <div class="filter-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <form method="get" action="@Url.Action("Index", "Cars")">
                        <div class="input-group mb-3 filter-controls">
                            <input type="text" id="searchInput" class="form-control" placeholder="Search by make, model, or description" name="searchTerm">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">Search</button>
                            </div>
                        </div>
                        <div class="input-group mb-3 filter-controls">
                            <select class="form-control" name="make">
                                <option value="">Select Make</option>
                                <option value="BMW">BMW</option>
                                <option value="Honda">Honda</option>
                                <option value="Toyota">Toyota</option>
                            </select>
                        </div>
                        <div class="input-group mb-3 filter-controls">
                            <select class="form-control" name="category">
                                <option value="">Select Category</option>
                                <option value="Electric">Electric</option>
                                <option value="Hybrid">Hybrid</option>
                                <option value="Gasoline">Gasoline</option>
                            </select>
                        </div>
                        <div class="input-group mb-3 filter-controls">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" class="form-control" name="minPrice" placeholder="Min Price">
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" name="maxPrice" placeholder="Max Price">
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3 filter-controls">
                            <button class="btn btn-primary" type="submit">Apply Filters</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


        <div class="row">
            @foreach (var car in Model)
            {
                var imagePath = car.ImagePath.Replace("\\", "/");
                <div class="col-md-4 mb-4">
                    <div class="card shadow">
                        <div class="position-relative overflow-hidden">
                            <img src="~/@imagePath" class="card-img" alt="Car Image">
                            <span class="badge">New Arrival</span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@($"{car.Make} {car.Model}")</h5>
                            <p class="card-text">
                                <strong>Price:</strong>  @car.Price <strong>(AFN)</strong><br />
                                <strong>Mileage:</strong> @car.Mileage <strong>(MPG)</strong> <br />
                                <strong>Location:</strong> @ViewBag.Location[car.Id].City <i class="fas fa-map-marker-alt"></i> <br /> <!-- Location icon -->
                            </p>
                            <div class="text-center">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@car.Id" class="btn btn-outline-primary detail-btn">Detail</a>

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    
    <div class="text-center mt-4">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="?pageNumber=@Model.PageNumber - 1">&laquo;</a>
                    </li>
                }

                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                        <a class="page-link" href="?pageNumber=@i">@i</a>
                    </li>
                }

                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="?pageNumber=@Model.PageNumber + 1">&raquo;</a>
                    </li>
                }
            </ul>
        </nav>
    </div>

