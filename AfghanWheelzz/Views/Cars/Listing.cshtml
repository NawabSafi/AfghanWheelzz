@model IEnumerable<AfghanWheelzz.ViewModels.CarViewModel>
@{
    ViewData["Title"] = "Car Listings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .custom-card {
        border: none;
        background-color: #fff;
        border-radius: 20px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
        overflow: hidden;
    }

        .custom-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
        }

    .card-img-top {
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        object-fit: cover;
        height: 200px;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .card-text {
        color: #666;
        margin-bottom: 20px;
    }

    .btn {
        border-radius: 10px;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #427680;
        border-color: #427680;
    }

        .btn-primary:hover {
            background-color: #ff5733;
            border-color: #ff5733;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #e45662;
            border-color: #e45662;
        }
</style>

<div class="container mt-5">
    <h1 class="text-center mb-4">My Listings</h1>
    <div class="row">
        @foreach (var car in Model)
        {
            var imagePath = car.ImagePath;
            <div class="col-md-4 mb-4">
                <div class="card custom-card">
                    <img src="~/@imagePath" class="card-img-top" alt="Car Image">
                    <div class="card-body">
                        <h5 class="card-title">@($"{car.Make} {car.Model}")</h5>
                        <p class="card-text">
                            <strong>Year:</strong> @car.Year <br />
                            <strong>Price:</strong> $@car.Price <br />
                            <strong>Mileage:</strong> @($"{car.Mileage} miles") <br />
                        </p>
                        <p class="card-text">@car.Description</p>
                        <div class="text-center">
                            <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-primary btn-sm edit-btn">Edit</a>
                            <button class="btn btn-danger btn-sm delete-btn" data-id="@car.Id">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    <div class="d-flex justify-content-center">
        <nav>
            <ul class="pagination">
                <li class="page-item @(ViewBag.PageNumber == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = ViewBag.PageNumber - 1 })" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.PageNumber ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { pageNumber = i })">@i</a>
                    </li>
                }
                <li class="page-item @(ViewBag.PageNumber == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = ViewBag.PageNumber + 1 })" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Create" class="btn btn-primary btn-lg">Add New Car</a>
    </div>
</div>

<!-- Modal HTML -->
<div id="myModal" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header flex-column">
                <div class="icon-box">
                    <i class="material-icons">&#xE5CD;</i>
                </div>
                <h4 class="modal-title w-100">Are you sure?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <p>Do you really want to delete these records? This process cannot be undone.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger">Delete</button>
            </div>

        </div>
    </div>
</div>

<script src="~/js/DeleteModal.js"></script>
